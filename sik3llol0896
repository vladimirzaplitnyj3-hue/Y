        conn.commit()
        await fetch_staff_info()
        await message.reply(f"üé© **{target.first_name}** —Å–Ω—è—Ç —Å –¥–æ–ª–∂–Ω–æ—Å—Ç–∏ –°–æ—Ç—Ä—É–¥–Ω–∏–∫–∞ (–°—Ç–∞–∂–µ—Ä–∞) [WARD AntiScam](https://t.me/WardReport).")

@app.on_message(filters.regex(r"(?i)^\+–º–æ–¥–µ—Ä–∞—Ç–æ—Ä"))
async def add_moderator(client, message):
    if not is_owner(message.from_user.id, message.from_user.username): 
        await message.reply("‚ùå –ù–∞–∑–Ω–∞—á–∞—Ç—å –ú–æ–¥–µ—Ä–∞—Ç–æ—Ä–æ–≤ –º–æ–≥—É—Ç —Ç–æ–ª—å–∫–æ –°–æ–∑–¥–∞—Ç–µ–ª–∏.")
        return
    parts = message.text.split(maxsplit=1)
    args = parts[1] if len(parts) > 1 else None
    target, _ = await find_target(client, message, args)
    if target:
        remove_all_staff_roles(target.id) 
        cursor.execute("INSERT OR REPLACE INTO moderators (user_id) VALUES (?)", (str(target.id),))
        conn.commit()
        await fetch_staff_info()
        await message.reply(f"üî® **{target.first_name}** –Ω–∞–∑–Ω–∞—á–µ–Ω –ú–æ–¥–µ—Ä–∞—Ç–æ—Ä–æ–º [WARD AntiScam](https://t.me/WardReport)!")

