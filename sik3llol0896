@app.on_message(filters.command("trust") | filters.regex(r"(?i)^/—Ç—Ä–∞—Å—Ç"))
async def add_trust(client, message):
    if not can_moderate(message.from_user.id, message.from_user.username): 
        await message.reply("‚ùå –í—ã–¥–∞–≤–∞—Ç—å —Å—Ç–∞—Ç—É—Å '–ü—Ä–æ–≤–µ—Ä–µ–Ω –≥–∞—Ä–∞–Ω—Ç–æ–º' –º–æ–≥—É—Ç —Ç–æ–ª—å–∫–æ –ì–∞—Ä–∞–Ω—Ç—ã –∏ –≤—ã—à–µ.")
        return
    parts = message.text.split(maxsplit=1)
    args = parts[1] if len(parts) > 1 else None
    target, _ = await find_target(client, message, args)
    
    sender_id = str(message.from_user.id)
    
    if target and str(target.id).isdigit():
        cursor.execute("INSERT OR REPLACE INTO trusted (user_id, guarantor_id) VALUES (?, ?)", (str(target.id), sender_id))
        conn.commit()
        await message.reply(f"üí† **{target.first_name}** –ø–æ–ª—É—á–∏–ª —Å—Ç–∞—Ç—É—Å '–ü—Ä–æ–≤–µ—Ä–µ–Ω –≥–∞—Ä–∞–Ω—Ç–æ–º [WARD AntiScam](https://t.me/WardReport)'!")

@app.on_message(filters.regex(r"(?i)^\-—Ç—Ä–∞—Å—Ç"))
async def remove_trust(client, message):
    if not can_moderate(message.from_user.id, message.from_user.username): 
        await message.reply("‚ùå –°–Ω–∏–º–∞—Ç—å —Å—Ç–∞—Ç—É—Å '–ü—Ä–æ–≤–µ—Ä–µ–Ω –≥–∞—Ä–∞–Ω—Ç–æ–º' –º–æ–≥—É—Ç —Ç–æ–ª—å–∫–æ –ì–∞—Ä–∞–Ω—Ç—ã –∏ –≤—ã—à–µ.")
        return
    parts = message.text.split(maxsplit=1)
    args = parts[1] if len(parts) > 1 else None
    target, _ = await find_target(client, message, args)
    if target:
        if cursor.execute("DELETE FROM trusted WHERE user_id = ?", (str(target.id),)).rowcount > 0: 
            conn.commit()
            await message.reply(f"üí† **{target.first_name}** –ª–∏—à–µ–Ω —Å—Ç–∞—Ç—É—Å–∞ '–ü—Ä–æ–≤–µ—Ä–µ–Ω –≥–∞—Ä–∞–Ω—Ç–æ–º [WARD AntiScam](https://t.me/WardReport)'.")
        else: await message.reply("‚ÑπÔ∏è –£ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –Ω–µ –±—ã–ª–æ —ç—Ç–æ–≥–æ —Å—Ç–∞—Ç—É—Å–∞.")

@app.on_message(filters.regex(r"(?i)^\+—Å–ø–∞—Å–∏–±–æ") | filters.regex(r"(?i)^\+rep"))
async def add_rep(client, message):
    if not can_moderate(message.from_user.id, message.from_user.username): 
        await message.reply("‚ùå –ü–æ–≤—ã—à–∞—Ç—å —Ä–µ–ø—É—Ç–∞—Ü–∏—é –º–æ–≥—É—Ç —Ç–æ–ª—å–∫–æ –ì–∞—Ä–∞–Ω—Ç—ã –∏ –≤—ã—à–µ.")
        return
    parts = message.text.split(maxsplit=1)
    args = parts[1] if len(parts) > 1 else None
    target, _ = await find_target(client, message, args)
    if target:
        if target.id == message.from_user.id: return
        cursor.execute("INSERT INTO reputation (user_id, count) VALUES (?, 1) ON CONFLICT(user_id) DO UPDATE SET count = count + 1", (str(target.id),))
        conn.commit()
        await message.reply(f"ü§ù –†–µ–ø—É—Ç–∞—Ü–∏—è **{target.first_name}** –ø–æ–≤—ã—à–µ–Ω–∞!")

@app.on_message(filters.command(["scam", "—Å–∫–∞–º"])) 
async def add_scam_cmd(client, message):
    if not (can_moderate(message.from_user.id, message.from_user.username) or is_staff(message.from_user.id)):
        return
        
    if len(message.command) < 4: 
        await message.reply("‚ö†Ô∏è –ü—Ä–∏–º–µ—Ä: `/scam @username –ü—Ä–∏—á–∏–Ω–∞ –°—Å—ã–ª–∫–∞`")
        return
    target_str = message.command[1]
    target, _ = await find_target(client, message, target_str)
    if not target or not str(target.id).isdigit():
        await message.reply("‚ùå –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –Ω–µ –Ω–∞–π–¥–µ–Ω.")
        return
    if is_any_staff(target.id, target.username):
        await message.reply("‚ùå –ù–µ–ª—å–∑—è —Å–∫–∞–º —Å–æ—Ç—Ä—É–¥–Ω–∏–∫–∞ [WARD AntiScam](https://t.me/WardReport).")
        return
    proof_link = message.command[-1]
    reason = " ".join(message.command[2:-1]) 
    save_id = str(target.id) 
    PENDING_SCAM_ENTRIES[message.from_user.id] = [save_id, reason, proof_link]
    await message.reply(f"‚úÖ –ó–∞–Ω–æ—Å–∏–º **{target.first_name}**. –í—ã–±–µ—Ä–∏—Ç–µ —Ä–µ–π—Ç–∏–Ω–≥:", reply_markup=get_scam_rating_keyboard())

@app.on_message(filters.command("unscam"))
async def un_scam_cmd(client, message):
    if not can_moderate(message.from_user.id, message.from_user.username): 
        return
    
    if len(message.command) < 2:
        await message.reply("‚ö†Ô∏è –ü—Ä–∏–º–µ—Ä: `/unscam @username`")
        return
    
    target_str = message.command[1]
    target, _ = await find_target(client, message, target_str)
    
    if not target: 
        return
    
    save_id = str(target.id)
    if cursor.execute("DELETE FROM scammers WHERE user_id = ?", (save_id,)).rowcount > 0:
        conn.commit()
        await message.reply(f"‚úÖ **{target_str}** —É–¥–∞–ª–µ–Ω –∏–∑ –±–∞–∑—ã —Å–∫–∞–º–µ—Ä–æ–≤ [WARD AntiScam](https://t.me/WardReport).")
    else: 
        await message.reply("‚ÑπÔ∏è –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –Ω–µ –±—ã–ª –≤ –±–∞–∑–µ —Å–∫–∞–º–µ—Ä–æ–≤.")

@app.on_message(filters.text & filters.private & ~filters.regex(r"^\/")) 
async def general_private_message_handler(client, message):
    if len(message.text) > 50: return
    if re.match(r"(?i)^(—á–µ–∫|check)\b", message.text.split()[0]): return 
    await send_main_menu(client, message.chat.id)

async def main():
    await fetch_staff_info()
    print("üöÄ –ë–æ—Ç [WARD AntiScam](https://t.me/WardReport) –∑–∞–ø—É—â–µ–Ω –∏ –≥–æ—Ç–æ–≤ –∫ —Ä–∞–±–æ—Ç–µ!")
    print("üëë –°–æ–∑–¥–∞—Ç–µ–ª–∏:")
    for name, data in OWNERS.items():
        print(f"  - {name} (ID: {data['id']}, Username: {data['username'] or '–Ω–µ—Ç'})")
    print("\nüì∏ **–ò–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è –¥–ª—è —Ä–æ–ª–µ–π:**")
    print(f"  ‚Ä¢ –ì–∞—Ä–∞–Ω—Ç: {ROLE_IMAGES['–ì–∞—Ä–∞–Ω—Ç']}")
    print(f"  ‚Ä¢ –ê–¥–º–∏–Ω: {ROLE_IMAGES['–ê–¥–º–∏–Ω']}")
    print(f"  ‚Ä¢ –ö–æ–¥–µ—Ä: {ROLE_IMAGES['–ö–æ–¥–µ—Ä']}")
    await app.start()
    await idle()
    await app.stop()

if __name__ == "__main__":
    try:
        loop = asyncio.get_event_loop()
        loop.run_until_complete(main())
    except KeyboardInterrupt:
        print("\nüëã –ë–æ—Ç –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω.")
    finally:
        conn.close()
